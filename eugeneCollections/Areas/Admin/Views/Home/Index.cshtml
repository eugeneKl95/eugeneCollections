@model DataManager
<h1>Управление пользователями</h1>
<table class="table">
    <tr><th>Логин</th><th>Email</th><th></th></tr>
    @foreach (var user in Model.Users.GetAllUsers())
    {
    <tr>
    <td>@user.UserName</td>
    <td>@user.Email</td>

    <td>
        <div>  
           <a asp-area="Admin" asp-controller="Home" asp-action="Edit" asp-route-id="@user.Id">редактировать</a>
           |
           <form style="display: inline-block;" id="form-@user.Id" asp-area="Admin" asp-controller="Home" asp-action="Delete" method="post">
              <input type="hidden" name="id" value="@user.Id">
              <a href="#" onclick="document.getElementById('form-@user.Id').submit();">удалить</a>
           </form>                   
        </div>
    </td>
    </tr>
    }
</table>

