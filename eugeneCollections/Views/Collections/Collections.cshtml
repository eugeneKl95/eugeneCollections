@model IQueryable<Theme>
@{
    ViewData["Title"] = "Коллекции";
    var newFileName = "";
    var imagePath = "";
}
<h1>Коллекции</h1>
<form method="post">    
    <div class="album py-5 bg-light">
        <div class="container">
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                @foreach (var c in Model)
                {
                    <input type="hidden" value="@c" />
                    newFileName = c.Id.ToString() + ".jpg";
                    imagePath = "/Images/" + newFileName;
                    <div class="col">
                        <div class="card shadow-sm">
                            <h4>@c.Name</h4>
                            <img src="@imagePath" width="225" height="225" style="justify-content:stretch" />
                            <div class="card-body">
                                <p class="card-text">@c.Description</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <a href="/Collections/ViewCollection">View</a>
                                        <a href="/Collections/AddCollection">Create</a>                                        
                                    </div>
                                    @*<small class="text-muted">9 mins</small>*@
                                </div>
                            </div>

                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</form>